{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <style>
        /* Custom styles for the User Management section */
        .content {
            margin-left: 220px;
            padding: 20px;
        }

        .content h1 {
            font-family: 'Oswald', sans-serif;
            text-align: center;
            margin-bottom: 20px;
            color: #9f608f; /* Custom color */
        }

        .table th,
        .table td {
            vertical-align: middle;
        }

        /* Custom Button Group */
        .custom-button-group {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
        }

        .custom-button-group .btn {
            border-radius: 0;
        }

        .custom-button-group .btn-primary {
            background-color: #9f9f60; /* Custom color */
            border-color: #9f9f60; /* Custom color */
            color: #fff;
        }

        .custom-button-group .btn-secondary {
            background-color: #6c757d; /* Dark Gray */
            border-color: #6c757d;
            color: #fff;
        }

        .custom-button-group .btn-danger {
            background-color: #dc3545; /* Red */
            border-color: #dc3545;
            color: #fff;
        }

        /* Icon styles */
        .fa {
            margin-right: 5px;
        }

        .deletee {
            margin-top: 16px;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'admin/sidebar/sidebar.html.twig' %}

    <div class="content">
        <h1><i class="fas fa-users mr-2"></i>User Management</h1>

        <table class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th><i class="fas fa-id-badge"></i> ID</th>
                    <th><i class="fas fa-envelope"></i> Email</th>
                    <th><i class="fas fa-cogs"></i> Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td class="text-center">
                            <div class="btn-group custom-button-group" role="group" aria-label="User actions">
                                <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-primary btn-sm" style="background-color: #9f9f60;"><i class="fas fa-eye"></i> Show</a>
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-secondary btn-sm"><i class="fas fa-edit"></i> Edit</a>
                                <div class='deletee'>{{ include('user/_delete_form.html.twig', {'button_class': 'btn btn-danger btn-sm'}) }}</div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center">No users found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
