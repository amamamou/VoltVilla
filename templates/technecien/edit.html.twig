{% extends 'base.html.twig' %}

{% block title %}Edit Technician{% endblock %}

{% block stylesheets %}
    <style>
        {{ parent() }}

        .content {
            margin-left: 220px;
            padding: 20px;
        }

        .content h1 {
            font-family: 'Oswald', sans-serif;
            margin-bottom: 20px;
            color: #9f608f; /* Custom color */
        }

        .edit-form-container {
            background-color: #f9f9f9;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            text-align: center;
            font-family: 'Courier New', monospace;
            margin-bottom: 250px;
        }

        .form-title {
            text-align: center;
            font-size: 36px;
            margin-bottom: 20px;
        }

        .back-to-list-link {
            display: inline-block;
            margin-top: 20px;
            text-decoration: none;
            color: #007bff; /* Bootstrap link color */
            font-size: 18px;
        }

        .back-to-list-link:hover {
            text-decoration: underline;
        }

        /* Additional styling for form fields */
        .edit-form-container form {
            margin-top: 20px;
            text-align: left;
        }

        .edit-form-container form label {
            font-size: 18px;
            font-weight: bold;
        }

        .edit-form-container form input[type="text"],
        .edit-form-container form input[type="email"] {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }

        .edit-form-container form button[type="submit"] {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .edit-form-container form button[type="submit"]:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'admin/sidebar/sidebar.html.twig' %}

    <div class="content">
        <h1><i class="fas fa-user-edit mr-2"></i> Edit Technician</h1>

        <div class="edit-form-container">
            <h2 class="form-title">Edit Technician</h2>
            {{ include('technecien/_form.html.twig', {'button_label': 'Update'}) }}
            <a href="{{ path('app_technecien_index') }}" class="back-to-list-link">Back to List</a>
            {{ include('technecien/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
