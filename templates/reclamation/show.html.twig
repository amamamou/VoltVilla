{% extends 'base.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block body %}
    {{ include('header/header.html.twig') }}

    <style>
        /* General Styles */
        body {
            font-family: 'Courier New', monospace;
            background-color: #f5f5f5; /* Light grey background */
            color: #333; /* Dark text color */
            margin-top: 120px;
        }

        /* Reclamation Container */
        .reclamation-container {
            max-width: 800px;
            margin: 50px auto;
            background-color: #ffffff; /* White background */
            padding: 20px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Shadow */
            border-radius: 5px; /* Rounded corners */
            margin-bottom: 300px;
        }

        /* Table Styles */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .table th,
        .table td {
            padding: 10px;
            border-bottom: 1px solid #ddd; /* Light grey border */
        }

        .table th {
            text-align: left;
            background-color: #f2f2f2; /* Light grey background for header */
            font-weight: bold;
        }

        /* Action Buttons */
/* Action Buttons */
.reclamation-actions {
    font-family: 'Oswald', sans-serif;
    font-size: 14px;
    text-align: center;
    display: flex;
    gap: 10px; /* Space between buttons */
    justify-content: center; /* Center the buttons horizontally */
}

.edit-button,
.delete-button {
    text-transform: uppercase;
    text-decoration: none;
    border-radius: 2px;
    transition: background-color 0.3s ease;
    border: none; /* Remove border */
    display: inline-flex; /* Center the text */
    align-items: center; /* Center the text */
    justify-content: center; /* Center the text */
}

.delete-button {
    margin-top: 9px;
    padding: 10px 20px;
    background-color: #d9534f; /* Red background */
    color: #ffffff; /* White text */
}

.delete-button:hover {
    background-color: #c9302c; /* Darker red on hover */
}

.edit-button {
    margin-top: 8px;
    padding: 8px 20px;
    background-color: #1c7694; /* Green background */
    color: #ffffff; /* White text */
}

.edit-button:hover {
    background-color: #1a5d7d; /* Darker green on hover */
}


        /* Header */
        h1 {
            font-family: 'Oswald', sans-serif;
            color: #333;
            margin-bottom: 20px;
        }
    </style>

    <div class="reclamation-container">
        <h1>Reclamation</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Num√©ro</th>
                    <td>{{ reclamation.id }}</td>
                </tr>
                <tr>
                    <th>La Date de Reclamation</th>
                    <td>{{ reclamation.DateReclamation ? reclamation.DateReclamation|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>La Description</th>
                    <td>{{ reclamation.Description }}</td>
                </tr>
            </tbody>
        </table>

        <div class="reclamation-actions">
           <div> <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="edit-button">Edit</a></div>
            {{ include('reclamation/_delete_form.html.twig', {'button_class': 'delete-button'}) }}
        </div>
    </div>

    {{ include('footer/footer.html.twig') }}
{% endblock %}
