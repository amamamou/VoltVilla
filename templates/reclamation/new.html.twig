{% extends 'base.html.twig' %}

{% block title %}New Reclamation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* General Styles */
        body {
            font-family: 'Courier New', monospace;
            background-color: #f5f5f5; /* Light grey background */
            color: #333; /* Dark text color */
            margin-top: 120px;
        }

        /* Reclamation Container */
        .reclamation-container {
            max-width: 800px;
            margin: 50px auto;
            background-color: #ffffff; /* White background */
            padding: 20px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Shadow */
            border-radius: 5px; /* Rounded corners */
            margin-bottom: 300px;
            text-align: center; /* Center the content */
        }

        /* Form Group */
        .form-group {
            margin-bottom: 20px;
            text-align: left; /* Align text to the left */
        }
         .formm-group {
            margin-left:350px;
            margin-bottom: 20px;
            text-align: left; /* Align text to the left */
        }

        /* Form Label */
        .form-label {
            font-weight: bold;
            display: block; /* Display labels as block elements */
        }

        /* Form Control */
        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        /* Action Button */
        .exploree-button {
            padding: 15px 30px;
            background-color: #1c7694;
            color: #ffffff;
            font-size: 16px;
            text-transform: uppercase;
            text-decoration: none;
            border-radius: 2px;
            transition: background-color 0.3s ease;
            display: inline-block; /* Ensure button is inline */
            margin-top: 10px; /* Add some space between elements */
        }

        .exploree-button:hover {
            background-color: #1a5d7d;
        }

        /* Header */
        h1 {
            font-family: 'Oswald', sans-serif;
            color: #333;
            margin-bottom: 20px;
        }
    </style>
{% endblock %}

{% block body %}
    <header>
        {% include 'header/header.html.twig' %}
    </header>

    <main>
        <div class="reclamation-container">
            <h1>New Reclamation</h1>

            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.Description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.Description, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.Description) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.ReferencePd, 'Produit Ã  reclamer', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.ReferencePd, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.ReferencePd) }}
                </div>
                <div class="formm-group">
                    <button type="submit" class="exploree-button">SEND</button>
                </div>
            {{ form_end(form) }}
        </div>
    </main>

    <footer>
        {% include 'footer/footer.html.twig' %}
    </footer>
{% endblock %}
