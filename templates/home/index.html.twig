{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block stylesheets %}
    <style>
        {{ parent() }}

        .headerr {
            position: relative;
        }

        .first-section {
            display: flex;
        }

        .left-section {
            flex: 1;
            position: sticky;
            top: 0;
            height: 100vh;
        }

        .left-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .left-imagee {
            width: 100%;
            height: 80%;
            object-fit: cover;
        }

        .right-section {
            flex: 1;
            position: relative;
            overflow: hidden;
        }

        .right-video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .advertising-section {
            background-color: #ffffff;
            padding: 50px 0;
        }

        .advertising-section .container3 {
            max-width: 800px;
            margin: 0 auto;
            text-align: center;
            font-family: 'Courier New', monospace;
        }

        .advertising-section h2 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .advertising-section p {
            font-size: 16px;
            margin-bottom: 10px;
        }

        .explore-sectionn {
            background-color: #f9f9f9;
            padding: 20px 0;
            margin-bottom: 10px;
        }

        .explore-sectionn .container4 {
            max-width: 1200px;
            margin-top: 20px;
            margin-left: 40px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .left-sectionn {
            flex: 1;
            text-align: center;
        }

        .right-sectionn {
            flex: 1;
            text-align: center;
        }

        .explore-buttonn {
            font-family: 'Oswald', sans-serif;
            padding: 8px 30px;
            background-color: #100d07;
            color: #ffffff;
            font-size: 18px;
            text-transform: uppercase;
            text-decoration: none;
            border-radius: 2px;
            transition: background-color 0.3s ease;
        }

        .explore-buttonn:hover {
            background-color: #1c7694;
        }

        .technicians-section {
            background-color: #ffffff;
            padding: 40px 0;
            text-align: center;
            margin-bottom: 250px;
        }

        .technicians-intro {
            font-family: 'Courier New', monospace;
            font-size: 24px;
            margin-top: 20px;
            text-align: center;
            margin-bottom: 20px;
            font-size: 20px;
            font-weight: bold;
        }

     .technicians-container {
    display: flex;
    overflow-x: auto;
    padding: 0 5px; /* Adjust the padding as desired */
    -webkit-overflow-scrolling: touch;
}


        .technician-card {
            flex: 0 0 auto;
            width: 200px;
            border: 1px solid #ddd;
            border-radius: 2px;
            padding: 10px;
            text-align: center;
            font-family: 'Courier New', monospace;
            margin: 0 10px;
            transition: transform 0.3s ease;
            cursor: pointer;
            text-decoration: none; /* Remove text decoration */
            color: inherit; /* Inherit the color */
        }

        .technician-card:hover {
            transform: scale(1.05);
        }

        .technician-card img {
            width: 100%;
            border-radius: 2px;
            height: 220px;
        }

        .technician-card h3 {
            font-size: 18px;
            margin: 10px 0 5px;
        }

        .technician-card p {
            font-size: 16px;
            margin: 0;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'header/header.html.twig' %}

    <section class="headerr">
        <div class="container2" style="margin-top:105px;">
            <div class="first-section">
                <div class="left-section">
                    <img src="images/im16.jpg" alt="Image" class="left-image">
                </div>
                <div class="right-section">
                    <video src="images/1.mp4" autoplay muted loop controls class="right-video"></video>
                </div>
            </div>
        </div>
    </section>

    <section class="advertising-section">
        <div class="container3">
            <h2>Why Choose VoltVilla for Home Appliances?</h2>
            <p>When your appliance encounters an issue, we send a technician to your doorstep!</p>
            <p>With VoltVilla, enjoy hassle-free shopping for all your home appliances.</p>
        </div>
    </section>

    <section class="explore-sectionn">
        <div class="container4">
            <div class="left-sectionn">
                <a href="/produit" class="explore-buttonn">Explore More</a>
            </div>
            <div class="right-sectionn">
                <img src="images/im9.jpg" alt="Image" class="left-imagee">
            </div>
        </div>
    </section>

    <section class="technicians-section">
        <div class="technicians-intro">
            Meet Our Professional Technicians
        </div>
        <div class="technicians-container">
            {% for tech in techneciens %}
                <a href="{{ path('app_technecien_showme', {'id': tech.id}) }}" class="technician-card">
                    <img src="images/tech{{ tech.id }}.jpg" alt="Technician {{ tech.id }}">
                    <h3>{{ tech.Prenom }} {{ tech.Nom }}</h3>
                </a>
            {% endfor %}
        </div>
    </section>

    {% include 'footer/footer.html.twig' %}
{% endblock %}
