{% extends 'base.html.twig' %}

{% block title %}Intervention index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .sidebar {
            height: 100%;
            width: 200px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40; /* Bootstrap dark color */
            overflow-x: hidden;
            padding-top: 20px;
        }

        .sidebar-header img {
            max-width: 100px;
        }

        .sidebar-header h2 {
            font-family: 'Oswald', sans-serif;
            color: #fff;
            margin: 0;
        }

        .sidebar-menu a {
            color: #fff;
            text-decoration: none;
        }

        .sidebar-menu a:hover {
            background-color: #495057; /* Bootstrap darker color */
        }

        .content {
            margin-left: 220px;
            padding: 20px;
        }

        .table th,
        .table td {
            vertical-align: middle;
        }

        .content h1 {
            font-family: 'Oswald', sans-serif; /* Using Oswald for titles */
            text-align: center;
        }

        /* Custom Button Group */
        .custom-button-group {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
        }

        .custom-button-group .btn {
            border-radius: 0;
        }

        .custom-button-group .btn-primary {
            background-color: #007bff; /* Blue */
            border-color: #007bff;
            color: #fff;
        }

        .custom-button-group .btn-secondary {
            background-color: #6c757d; /* Dark Gray */
            border-color: #6c757d;
            color: #fff;
        }

        .custom-button-group .btn-danger {
            background-color: #dc3545; /* Red */
            border-color: #dc3545;
            color: #fff;
            margin-top: 16px;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'admin/sidebar/sidebar.html.twig' %}

    <div class="content">
        <h1>Intervention index</h1>

        <table class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>DateInterv</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for intervention in interventions %}
                    <tr>
                        <td>{{ intervention.id }}</td>
                        <td>{{ intervention.DateInterv ? intervention.DateInterv|date('Y-m-d') : '' }}</td>
                        <td>
                            <div class="btn-group custom-button-group" role="group" aria-label="Intervention actions">
                                <a href="{{ path('app_intervention_show', {'id': intervention.id}) }}" class="btn btn-primary btn-sm">Show</a>
                                <a href="{{ path('app_intervention_edit', {'id': intervention.id}) }}" class="btn btn-secondary btn-sm">Edit</a>
                                <div>{{ include('intervention/_delete_form.html.twig', {'button_class': 'btn btn-danger btn-sm'}) }}</div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center">No interventions found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_intervention_new') }}" class="btn btn-primary">Create new</a>
    </div>
{% endblock %}
