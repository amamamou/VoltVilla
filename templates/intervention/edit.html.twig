{% extends 'base.html.twig' %}

{% block title %}Edit Intervention{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Custom styles for the Edit Intervention page */
        .content {
            margin-left: 220px;
            padding: 20px;
            font-family: Arial, sans-serif;
        }

        h1 {
            font-size: 24px;
            color: #333;
            margin-bottom: 20px;
        }

        form {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            margin-bottom: 5px;
            color: #333;
            display: block;
        }

        input[type="text"],
        input[type="number"] {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border-radius: 5px;
            border: 1px solid #ccc;
            transition: border-color 0.3s;
        }

        input[type="text"]:focus,
        input[type="number"]:focus {
            outline: none;
            border-color: #9f608f; /* Custom color */
        }

        button[type="submit"] {
            background-color: #9f9f60; /* Custom color */
            border-color: #9f9f60; /* Custom color */
            color: #fff;
            padding: 12px 24px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button[type="submit"]:hover {
            background-color: #7e7e47; /* Custom hover color */
        }

        a.btn {
            background-color: #ff00bf;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        a.btn:hover {
            background-color: #d1009b; /* Custom hover color */
        }

        a.btn:not(:last-child) {
            margin-right: 10px;
        }

        .delete-form {
            margin-top: 20px;
        }

        .delete-form button {
            background-color: #dc3545; /* Red */
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .delete-form button:hover {
            background-color: #bd2130; /* Darker red on hover */
        }
           .content h1 {
            font-family: 'Oswald', sans-serif;
            margin-bottom: 20px;
            color: #9f608f; /* Custom color */
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'admin/sidebar/sidebar.html.twig' %}

    <div class="content">
         <h1><i class="fas fa-wrench mr-2"></i>Edit Intervention</h1>

        <form action="{{ path('app_intervention_edit', {'id': intervention.id}) }}" method="post">
            {{ include('intervention/_form.html.twig', {'button_label': 'Update'}) }}

            <button type="submit">Update</button>
        </form>

        <a href="{{ path('app_intervention_index') }}" class="btn"><i class="fas fa-chevron-left"></i> Back to list</a>

    </div>
{% endblock %}
