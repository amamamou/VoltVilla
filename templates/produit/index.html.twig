{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block stylesheets %}
    <style>
     .cardd-containerr {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); /* Adjust the minimum and maximum width as needed */
    gap: 20px;
    margin-top: 10px;
    margin-bottom: 250px;
    background-color: #f9f9f9;
}
        .cardd {
            width: 350px;
            background-color: #f4f1f1;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 4px;
            height: 360px;
            position: relative; /* Add position relative to the card */
        }

        .cardd-body {
            text-align: center;
            font-family: 'Oswald', sans-serif; /* Using Oswald for the designation text */
        }

        .explore-buttoon {
            padding: 10px 30px;
            background-color: #100d07;
            color: #ffffff;
            font-size: 8px;
            text-transform: uppercase;
            text-decoration: none;
            border-radius: 2px;
            transition: background-color 0.3s ease;
        }

        .explore-buttoon:hover {
            background-color: #1c7694;
        }

        .product-image {
            width: 100%; /* Adjust the width of the image */
            height: 300px; /* Adjust the height of the image */
            object-fit: cover;
            margin-bottom: 10px;
        }

        .category-container {
            margin-top: 80px;
            width: 100%;
            overflow: hidden;
            white-space: nowrap;
        }

        .category-image {
            display: inline-block;
            width: 200px; /* Adjust the width of each category image */
            height: 200px; /* Adjust the height of each category image */
            background-size: cover;
            background-position: center;
            animation: slide-animation 20s linear infinite;
        }

        @keyframes slide-animation {
            0% { transform: translateX(0); }
            100% { transform: translateX(-100%); }
        }

        .choose-product {
            text-align: center;
            font-family: 'Courier New', monospace; /* Use Courier New font */
            margin-top: 30px;
            margin-bottom: 30px;
        }

        /* Add styles for the price rectangle */
        .price-rectangle {
            position: absolute;
            top: 0;
            background-color: #c9302c;
            color: white;
            padding: 10px;
            border-radius: 2px;
            left:0;
            text-align:center;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'header/header.html.twig' %}

    <h1>Produit</h1>

    <div class="category-container">
        {% for i in 1..10 %}
            <div class="category-image" style="background-image: url('{{ asset('images/cat' ~ i ~ '.png') }}')"></div>
        {% endfor %}
    </div>

    <div class="choose-product">
    <p>Discover Your Next Favorite! Explore Our Exciting Products Now!</p>
    </div>

    <div class="cardd-containerr">
        {% for produit in produits %}
            <a href="{{ path('app_produit_show', {'id': produit.id}) }}" style="text-decoration: none; color: inherit;">
                <div class="cardd">
                    <div class="price-rectangle">{{ produit.Prix }}DT</div>
                    <div class="cardd-body">
                        <img src="{{ asset('images/' ~ produit.id ~ '.jpg') }}" alt="Product Image" class="product-image">
                        <p>{{ produit.Designation }}</p>
                    </div>
                </div>
            </a>
        {% else %}
            <p>No records found</p>
        {% endfor %}
    </div>

    {% include 'footer/footer.html.twig' %}
{% endblock %}
