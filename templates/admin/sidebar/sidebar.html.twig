<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
    <style>
        /* Your sidebar CSS styles */
        .sidebar {
            height: 100%;
            width: 200px;
            position: fixed;
            top: 0;
            left: 0;
            overflow-x: hidden;
            padding-top: 20px;
            animation: animateBackground 20s linear infinite alternate; /* Animation for the background */
        }

        .sidebar-header {
            text-align: center;
            margin-bottom: 20px;
        }

        .sidebar-header h2 {
            font-family: 'Oswald', sans-serif;
            color: #fff;
            margin: 0;
        }

        .sidebar-menu {
            padding: 0;
            margin: 0;
            list-style: none;
        }

        .sidebar-menu a {
            display: block;
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            transition: background-color 0.3s;
        }

        .sidebar-menu a:hover {
            background-color: #555;
        } /* Bootstrap darker color */

        /* Animation for the background */
        @keyframes animateBackground {
            0% {
                background-position: 0 0;
            }
            100% {
                background-position: 100% 0;
            }
        }
    </style>
</head>
<body>

<div class="sidebar bg-dark text-light">
    <div class="sidebar-header text-center py-3">
        <img src="{{ asset('images/vv.png') }}" alt="VOLTVILA Logo" class="img-fluid mb-2" style="max-width: 100px;">
        <h2 class="h5">VOLTVILLA</h2>
    </div>
    <div class="sidebar-menu list-group list-group-flush">
        <a class="list-group-item list-group-item-action bg-dark text-light" href="{{ path('admin_dashboard') }}">
            <i class="fas fa-home mr-2"></i>Dashboard Home
        </a>
        <a href="{{ path('app_produits_index') }}" class="list-group-item list-group-item-action bg-dark text-light"><i class="fas fa-box mr-2"></i>Products</a>
        <a href="{{ path('app_user_index') }}" class="list-group-item list-group-item-action bg-dark text-light"><i class="fas fa-users mr-2"></i>Users</a>
        <a href="{{ path('app_technecien_index') }}" class="list-group-item list-group-item-action bg-dark text-light"><i class="fas fa-tools mr-2"></i>Techniciens</a>
        <a href="{{ path('app_reclamation_index') }}" class="list-group-item list-group-item-action bg-dark text-light"><i class="fas fa-exclamation-triangle mr-2"></i>Reclamations</a>
        <a href="{{ path('app_intervention_index') }}" class="list-group-item list-group-item-action bg-dark text-light"><i class="fas fa-wrench mr-2"></i>Interventions</a>
        <a href="#" class="list-group-item list-group-item-action bg-dark text-light"><i class="fas fa-user mr-2"></i>Profile</a>
        <a href="#"  class="list-group-item list-group-item-action bg-dark text-light"><i class="fas fa-cog mr-2"></i>Settings</a>
        <!-- Logout link -->
        <a href="{{ path('app_logout') }}" class="list-group-item list-group-item-action bg-dark text-light"><i class="fas fa-sign-out-alt mr-2"></i>Logout</a>
    </div>
    <!-- Copyright notice -->
    <div class="text-center mt-5 text-white">
        <small>&copy; 2024 VOLTVILLA. All rights reserved.</small>
    </div>

</div>

<!-- Bootstrap JS (Optional, if you need JavaScript functionality) -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<!-- Font Awesome JS (Optional, if you need JavaScript functionality) -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>

</body>
</html>
