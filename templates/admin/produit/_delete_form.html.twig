<form action="{{ path('app_produit_delete', {'id': produit_id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this product?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit_id) }}">
    <button type="submit" class="{{ button_class }}">Delete</button>
</form>
