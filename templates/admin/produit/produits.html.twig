{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">

    <style>
        /* Custom styles for the Produit Management section */
        .content {
            margin-left: 220px;
            padding: 20px;
        }

        .content h1 {
            font-family: 'Oswald', sans-serif;
            margin-bottom: 20px;
            color: #9f608f; /* Custom color */
        }

        .table th,
        .table td {
            vertical-align: middle;
        }

        /* Custom Button Group */
        .custom-button-group {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
        }

        .custom-button-group .btn {
            border-radius: 0;
        }

        .custom-button-group .btn-primary {
            background-color: #9f9f60; /* Custom color */
            border-color: #9f9f60; /* Custom color */
            color: #fff;
        }

        .custom-button-group .btn-secondary {
            background-color: #6c757d; /* Dark Gray */
            border-color: #6c757d;
            color: #fff;
        }

        .custom-button-group .btn-danger {
            background-color: #dc3545; /* Red */
            border-color: #dc3545;
            color: #fff;
            margin-top: 16px;
        }

        /* Icon styles */
        .fa {
            margin-right: 5px;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'admin/sidebar/sidebar.html.twig' %}

    <div class="content">
        <h1><i class="fas fa-box mr-2"></i> Produit Management</h1>
        <a href="{{ path('app_produit_new') }}" class="btn btn-dangerr style="background-color: #ff00bf;"><i class="fas fa-plus"></i> Create new</a>


        <table class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th><i class="fas fa-id-badge"></i> Id</th>
                    <th><i class="fas fa-file-signature"></i> Designation</th>
                    <th><i class="fas fa-money-bill-wave"></i> Price</th>
                    <th><i class="fas fa-cogs"></i> Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for produit in produits %}
                    <tr>
                        <td>{{ produit.id }}</td>
                        <td>{{ produit.Designation }}</td>
                        <td>{{ produit.Prix }}</td>
                        <td>
                            <div class="btn-group custom-button-group" role="group" aria-label="Produit actions">
                                <a href="{{ path('app_produit_showsadmin', {'id': produit.id}) }}" class="btn btn-primary btn-sm" style="background-color: #9f9f60;"><i class="fas fa-eye"></i> Show</a>
                                <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-secondary btn-sm"><i class="fas fa-edit"></i> Edit</a>
                                <div>{{ include('admin/produit/_delete_form.html.twig', {'button_class': 'btn btn-danger btn-sm', 'produit_id': produit.id}) }}</div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
