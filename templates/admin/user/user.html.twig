{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block stylesheets %}
    <style>
        .user-details-container {
            background-color: #f9f9f9;
            display: flex;
            margin-top: 50px;
            margin-bottom: 180px;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .left-section, .right-section {
            flex: 1;
            padding: 20px;
        }

        .left-section {
            text-align: center;
        }

        .user-profile-picture {
            max-width: 200px;  /* Adjust the size as needed */
            height: auto;
            border-radius: 50%;
            margin-bottom: 20px;
        }

        .user-title {
            text-align: center;
            font-family: 'Oswald', sans-serif;
            font-size: 40px;
            margin-bottom: 20px;
        }

        .user-info {
            font-size: 18px;
            margin-bottom: 10px;
        }

        .user-info span {
            font-weight: bold;
            color: #333;
        }

        .back-to-list-btn {
            margin-top: 20px;
            display: inline-block;
            padding: 5px;
            background-color: #ccc;
            border-radius: 50%;
        }

        .back-to-list-btn svg {
            fill: #000;
            height: 24px;
            width: 24px;
        }

        .content {
            margin-left: 220px;
            padding: 20px;
        }
           .content h1 {
            font-family: 'Oswald', sans-serif;
            margin-bottom: 20px;
            color: #9f608f; /* Custom color */
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'admin/sidebar/sidebar.html.twig' %}

    <div class="content">
        <h1><i class="fas fa-users mr-2"></i>User Details</h1>

        <div class="user-details-container">
            <div class="left-section">
                <img src="{{ asset('images/user' ~ user.id ~ '.png') }}" alt="Profile Picture" class="user-profile-picture">
                <h2 class="user-title">{{ user.nom }} {{ user.prenom }}</h2>
                <div class="user-info"><span>ID:</span> {{ user.id }}</div>
                <div class="user-info"><span>Email:</span> {{ user.email }}</div>
                <div class="user-info"><span>Roles:</span> {{ user.roles|join(', ') }}</div>
            </div>
            <div class="right-section">
                <div class="user-info"><span>Address:</span> {{ user.adresse }}</div>
                <div class="user-info"><span>Postal Code:</span> {{ user.cp }}</div>

                <a href="{{ path('app_user_index') }}" class="back-to-list-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e8eaed">
                        <path d="m313-440 224 224-57 56-320-320 320-320 57 56-224 224h487v80H313Z"/>
                    </svg>
                </a>
            </div>
        </div>

        {% for flash_message in app.session.flashBag.get('success') %}
            <div class="alert-container">
                <div class="alert" role="alert">
                    {{ flash_message }}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
